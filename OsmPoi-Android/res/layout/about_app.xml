<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dip"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/text_about_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dip"
        android:text="@string/app_name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30dip" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Copyright Â© 2012 by yrtimiD" />

       <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:autoLink="all"
        android:text="yrtimid@gmail.com" />
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:autoLink="all"
        android:text="http://code.google.com/p/osmpoi-android/" />
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_margin="2dip"
        android:background="@android:color/white" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dip"
        android:text="POI DB stats"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <include layout="@layout/db_stats_element"  android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/poi_nodes"/>
    <include layout="@layout/db_stats_element"  android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/poi_ways"/>
    <include layout="@layout/db_stats_element"  android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/poi_relations"/>
    <include layout="@layout/db_stats_element"  android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/poi_cells"/>
    
 	<TextView
 	    android:layout_width="fill_parent"
 	    android:layout_height="wrap_content"
 	    android:layout_gravity="center_horizontal"
 	    android:layout_marginTop="5dip"
 	    android:text="Addresses DB stats"
 	    android:textAppearance="?android:attr/textAppearanceMedium" />

    <include layout="@layout/db_stats_element"  android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/addr_nodes"/>
    <include layout="@layout/db_stats_element"  android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/addr_ways"/>
    <include layout="@layout/db_stats_element"  android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/addr_relations"/>
    
    
</LinearLayout>